<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="carbon_Theme.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff3F51B5</item>
        <item name="colorPrimaryDark">#ff303F9F</item>
        <item name="colorAccent">#ffFF4081</item>
        <item name="carbon_colorError">@color/carbon_amber_400</item>
    </style>

    <style name="RaisedButtonStyle" parent="AppTheme">
        <item name="colorPrimary">#ff9C27B0</item>
        <item name="colorAccent">#ffFF5252</item>
        <item name="carbon_rippleColor">#42ffffff</item>
    </style>

    <style name="calcButtonStyle" parent="carbon_Button.Flat">
        <item name="carbon_rippleColor">#42ffffff</item>
        <item name="carbon_rippleStyle">borderless</item>
        <item name="carbon_rippleHotspot">false</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">30sp</item>
        <item name="carbon_fontPath">"carbon/Roboto-Light.ttf"</item>
    </style>

    <style name="calcButtonStyle2" parent="calcButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="carbon_fontPath">"carbon/Roboto-Regular.ttf"</item>
    </style>

    <style name="loaddialog" parent="android:style/Theme.Dialog">

        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">false</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:autoStart">true</item>
    </style>

</resources>

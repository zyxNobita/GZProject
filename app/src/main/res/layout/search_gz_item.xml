<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.CardView
    android:id="@+id/search_gz_cardview"
    style="@style/carbon_CardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:carbon_insetColor="?attr/colorPrimary"
    app:carbon_rippleColor="#3F51B5"
    app:carbon_cornerRadius="5dp"
    android:clickable="true"
    >

    <TextView
        android:id="@+id/search_item_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/carbon_toolbarHeight"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/carbon_padding"
        android:paddingRight="@dimen/carbon_padding"
        android:textAppearance="?attr/carbon_textAppearanceBody2" />

    <TextView
        android:layout_toRightOf="@id/search_item_name"
        android:id="@+id/search_item_value"
        android:layout_width="match_parent"
        android:layout_height="@dimen/carbon_toolbarHeight"
        android:gravity="right|center_vertical"
        android:paddingLeft="@dimen/carbon_padding"
        android:paddingRight="@dimen/carbon_padding"
        android:textAppearance="?attr/carbon_textAppearanceBody2" />

</carbon.widget.CardView>
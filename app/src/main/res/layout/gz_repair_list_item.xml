<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.CardView
    style="@style/carbon_CardView"
    android:id="@+id/gz_repair_list_carview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:carbon_insetColor="?attr/colorPrimary"
    app:carbon_rippleColor="#3F51B5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    >

    <carbon.widget.LinearLayout
        android:padding="10dp"
        android:layout_toRightOf="@+id/gz_list_item_iv"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <carbon.widget.TextView
                android:id="@+id/gz_repair_list_name"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                />

            <carbon.widget.TextView
                android:id="@+id/gz_repair_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_exit_color"
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/netmusic_listview_shape"
            android:layout_marginTop="5dp"
            />

        <carbon.widget.TextView
            android:id="@+id/gz_repair_list_item_problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/carbon_padding"
            android:paddingRight="@dimen/carbon_padding"
            android:paddingBottom="5dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:textAppearance="?attr/carbon_textAppearanceBody2"
            />

        <carbon.widget.TextView
            android:id="@+id/gz_repair_list_item_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/carbon_padding"
            android:paddingRight="@dimen/carbon_padding"
            android:paddingBottom="5dp"
            android:visibility="gone"
            android:textAppearance="?attr/carbon_textAppearanceBody2"
            />

        <carbon.widget.TextView
            android:id="@+id/gz_repair_list_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/carbon_padding"
            android:paddingRight="@dimen/carbon_padding"
            android:singleLine="true"
            android:paddingBottom="5dp"
            android:visibility="gone"
            android:textAppearance="?attr/carbon_textAppearanceBody2"
            />

        <carbon.widget.TextView
            android:id="@+id/gz_repair_list_item_pre_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/carbon_padding"
            android:paddingRight="@dimen/carbon_padding"
            android:paddingBottom="5dp"
            android:visibility="gone"
            android:textAppearance="?attr/carbon_textAppearanceBody2"
            />

        <carbon.widget.TextView
            android:id="@+id/gz_repair_list_item_complete_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/carbon_padding"
            android:paddingRight="@dimen/carbon_padding"
            android:paddingBottom="5dp"
            android:visibility="gone"
            android:textAppearance="?attr/carbon_textAppearanceBody2"
            />


        <carbon.widget.TextView
            android:id="@+id/gz_repair_list_item_create_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:paddingLeft="@dimen/carbon_padding"
            android:paddingRight="@dimen/carbon_padding"
            android:paddingBottom="5dp"
            android:textSize="12sp"
            android:textAppearance="?attr/carbon_textAppearanceBody2"
            android:textColor="@color/forestgreen"
            />

    </carbon.widget.LinearLayout>
</carbon.widget.CardView>
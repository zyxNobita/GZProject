    <!-- ZXing -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".GZApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.other.activity.SplashPage"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.other.activity.Login" />
        <activity android:name=".controller.other.activity.MainActivity" />

        <!-- 二维码扫描 -->
        <activity
            android:name=".zxing.MipcaActivityCapture"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".controller.main.activity.GZDetail"
            android:screenOrientation="portrait" />

        <service android:name=".service.UpdateVersionServer" />

        <activity android:name=".controller.main.activity.GZList" />
        <activity android:name=".controller.main.activity.GZRepair"></activity>
    </application>

